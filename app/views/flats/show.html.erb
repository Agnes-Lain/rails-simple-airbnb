<%= render "navbar" %>

<div class="flat-img" style="background-image: url('<%= @flat.image_url %>');">
</div>

<div class="container">
  <div class="flat-info d-flex flex-row">
    <div class="flat col-8">
      <div class="card">
        <div class="card-body">
          <h1 class="card-title"><%= @flat.name %></h1>
          <p class="card-text"><%= @flat.address %></p>
        </div>
      </div>

      <div class="card mt-3">
        <div class="card-body">
          <h3 class="card-title">A bit more about this flat...</h3>
          <p class="card-text"><%= @flat.description %></p>
        </div>
      </div>
    </div>

    <div class="booking col-4">
      <div class="flat-show-card">
        <h5>Book this place!</h5>
        <form action="">
          <div class="input-group">
            <span class="input-group-addon" id="basic-addon1">From:</span>
            <input type="text" class="form-control" placeholder="12/10/2017" aria-label="Username" aria-describedby="basic-addon1">
          </div>
          <div class="input-group mt-2">
            <span class="input-group-addon" id="basic-addon1">To:</span>
            <input type="text" class="form-control" placeholder="18/10/2017" aria-label="Username" aria-describedby="basic-addon1">
          </div>
          <input type="submit" value="Book" class="btn btn-success mt-2" style="width: 100%">
        </form>
      </div>

      <div class="card mt-3">
        <div class="card-body">
          <h3 class="card-title">Details</h3>
          <div class="d-flex flex-row">
            <p><%= @flat.number_of_guests %> <i class="fas fa-user-friends"></i></p>
            <p><%= @flat.price_per_night %> <i class="fas fa-euro-sign"></i></p>
          </div>
        </div>
      </div>

      <div class="card mt-3">
        <div class="card-body">
          <div class="d-flex flex-row">
            <h5 class="ml-1">Share</h5>
            <h5><i class="fab fa-facebook-square ml-1"></i></h5>
            <h5><i class="fab fa-twitter-square ml-1"></i></h5>
            <h5><i class="fab fa-pinterest-square ml-1"></i></h5>
            <h5><i class="fas fa-envelope-square ml-1"></i></h5>
          </div>
        </div>
      </div>

    </div>
  </div>

</div>








